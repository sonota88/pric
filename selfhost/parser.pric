def _parse_when_clause(g_)
  var when_clause_;
  var cond_expr_node_;
  var stmts_;

  consume_sym_paren_l(g_); # (
  cond_expr_node_ = parse_expr(g_);
  consume_sym_paren_r(g_); # )

  consume_sym_cbracket_l(g_); # {
  stmts_ = parse_stmts(g_);
  consume_sym_cbracket_r(g_); # }

  when_clause_ = NodeList_new(g_);
  NodeList_add(when_clause_, cond_expr_node_);
  NodeList_add_all(when_clause_, stmts_);

  return when_clause_;
end

