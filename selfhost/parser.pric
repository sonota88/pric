def parse_var(g_)
  var [2]str_semicolon;
  var [2]str_equal;
  var t_;

  aset(&str_semicolon, 0, 59); #;
  aset(&str_semicolon, 1,  0);

  aset(&str_equal, 0, 61); # =
  aset(&str_equal, 1,  0);

  t_ = peek(g_, 2);
  case
  when (Token_val_eq(t_, &str_semicolon))
    _parse_var_declare(g_);
  when (Token_val_eq(t_, &str_equal))
    _parse_var_init(g_);
  else
    print_s(Token_get_val(t_));
    panic(240); # must not happen
  end

end

def _parse_expr_right(g_, expr_node_l_)
  var t_ = peek(g_, 0);
  var expr_node_r_;
  var expr_els_;
  var [2]str_plus;
  var [2]str_star;
  var [3]str_double_equal;
  var [3]str_not_equal;
  var [3]str_eq_op;
  var [4]str_neq_op;

  aset(&str_plus, 0, 43); # +
  aset(&str_plus, 1,  0);

  aset(&str_star, 0, 42); # *
  aset(&str_star, 1,  0);

  aset(&str_double_equal, 0, 61); # =
  aset(&str_double_equal, 1, 61); # =
  aset(&str_double_equal, 2,  0);

  aset(&str_not_equal, 0, 33); # !
  aset(&str_not_equal, 1, 61); # =
  aset(&str_not_equal, 2,  0);

  aset(&str_eq_op, 0, 101); # e
  aset(&str_eq_op, 1, 113); # q
  aset(&str_eq_op, 2,   0);

  aset(&str_neq_op, 0, 110); # n
  aset(&str_neq_op, 1, 101); # e
  aset(&str_neq_op, 2, 113); # q
  aset(&str_neq_op, 3,   0);

  if (char_at(Token_get_val(t_), 0) == 41) # )
    return expr_node_l_;
  else

    if (char_at(Token_get_val(t_), 0) == 59) #;
      return expr_node_l_;
    else

      case
      when (char_at(Token_get_val(t_), 0) == 43) # +
        consume_sym(g_, &str_plus);
        expr_node_r_ = parse_expr(g_);

        expr_els_ = NodeList_new(g_);

        NodeList_add_str(g_, expr_els_, &str_plus);
        NodeList_add(expr_els_, expr_node_l_);
        NodeList_add(expr_els_, expr_node_r_);

        return Node_new_list(g_, expr_els_);

      when (char_at(Token_get_val(t_), 0) == 42) # *
        consume_sym(g_, &str_star);
        expr_node_r_ = parse_expr(g_);

        expr_els_ = NodeList_new(g_);

        NodeList_add_str(g_, expr_els_, &str_star);
        NodeList_add(expr_els_, expr_node_l_);
        NodeList_add(expr_els_, expr_node_r_);

        return Node_new_list(g_, expr_els_);

      when (Token_val_eq(t_, &str_double_equal))
        consume_sym(g_, &str_double_equal);
        expr_node_r_ = parse_expr(g_);

        expr_els_ = NodeList_new(g_);

        NodeList_add_str(g_, expr_els_, &str_eq_op);
        NodeList_add(expr_els_, expr_node_l_);
        NodeList_add(expr_els_, expr_node_r_);

        return Node_new_list(g_, expr_els_);

      when (Token_val_eq(t_, &str_not_equal))
        consume_sym(g_, &str_not_equal);
        expr_node_r_ = parse_expr(g_);

        expr_els_ = NodeList_new(g_);

        NodeList_add_str(g_, expr_els_, &str_neq_op);
        NodeList_add(expr_els_, expr_node_l_);
        NodeList_add(expr_els_, expr_node_r_);

        return Node_new_list(g_, expr_els_);

      else

        p_str(Token_get_val(t_));
        panic(380); # _parse_expr_right
      end

    end

  end
end

def parse_expr(g_)
  var t_left_;
  var n;
  var expr_node_l_;

  t_left_ = peek(g_, 0);

  if (char_at(Token_get_val(t_left_), 0) == 40) # (
    consume_sym_paren_l(g_); # (
    expr_node_l_ = parse_expr(g_);
    consume_sym_paren_r(g_); # )

    return _parse_expr_right(g_, expr_node_l_);
  else

    case
    when (Token_kind_eq(t_left_, TOKEN_KIND__INT()))
      inc_token_index(g_);

      n = parse_int(Token_get_val(t_left_));
      expr_node_l_ = Node_new_int(g_, n);

      return _parse_expr_right(g_, expr_node_l_);

    when (Token_kind_eq(t_left_, TOKEN_KIND__IDENT()))
      inc_token_index(g_);

      expr_node_l_ = Node_new_str(g_, Token_get_val(t_left_));

      return _parse_expr_right(g_, expr_node_l_);

    else
      Json_print(Token_to_plain(g_, t_left_));
      panic(433); # not yet impl
    end

  end

end

